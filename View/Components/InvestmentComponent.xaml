<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="src.View.Components.InvestmentComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:src.View.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <TextBlock x:Name="UserFirstNameTextBlock" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Text="{Binding FirstName, StringFormat='First Name: {0}'}"/>
            <TextBlock x:Name="UserSecondNameTextBlock" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Text="{Binding SecondName, StringFormat='Second Name: {0}'}"/>
            <TextBlock x:Name="TotalInvestedTextBlock" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Text="{Binding TotalInvested, StringFormat='Total Invested: {0}'}"/>
            <TextBlock x:Name="TotalReturnsTextBlock" FontSize="14" Margin="0,0,0,20" Text="{Binding TotalReturns, StringFormat='Total Returns: {0}'}"/>
            <TextBlock x:Name="AverageROITextBlock" FontSize="14" Margin="0,0,0,20" Text="{Binding AverageROI, StringFormat='Average ROI: {0}'}"/>
            <TextBlock x:Name="NumberOfInvestmentsTextBlock" FontSize="14" Margin="0,0,0,20" Text="{Binding NumberOfInvestments, StringFormat='Number of Investments: {0}'}"/>
        </StackPanel>
    </Grid>
</Page>
